<resources>

    <!-- Temas base de la aplicacion. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
       <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryLight</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>

    </style>

    <style name="AppTheme.SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryLight</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>

    <!--<style name="miToolBar" parent="android:Widget.Material.Toolbar">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>-->

    <!--Estilos botones-->
    <style name="Widget" />

    <style name="Widget.Button">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <!--Estilos TextInputLayout-->
    <style name="miTil" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="boxStrokeColor">@color/colorPrimaryDark</item>
        <item name="boxStrokeWidth">50dp</item>
    </style>

    <!--Estilos RadioButton-->
    <style name="rdb" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.SplashTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.SplashTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.SplashTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- TODO https://danielme.com/2018/12/19/diseno-android-menu-lateral-con-navigation-drawer/  De esta direcion podemos intentar rarreglar el fallo de lso botones negros-->


</resources>
